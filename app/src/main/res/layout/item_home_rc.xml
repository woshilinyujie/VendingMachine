<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginBottom="@dimen/dp_8"
    android:background="@drawable/shape_radius_4_ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_rc_item"
    android:layout_width="@dimen/dp_98"
    android:layout_height="@dimen/dp_80">


    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        
        <TextView
            android:id="@+id/home_zhekou"
            android:paddingBottom="@dimen/dp_5"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_6"
            android:gravity="center"
            android:text="折扣"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@mipmap/zhekou"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_15" />

        <TextView
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:text="最低至"
            android:textSize="@dimen/sp_8"
            android:textColor="#e31500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/home_money"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_2"
            android:text="￥10.00"
            android:textSize="@dimen/sp_12"
            android:textColor="#1a1a1a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/home_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_2"
            android:text="描述"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/sp_8" />


    </LinearLayout>
<ImageView
    android:scaleType="fitXY"
    android:id="@+id/home_food"

    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
</RelativeLayout>